<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/voice_rcd_hint_rcding"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:visibility="visible"
            android:id="@+id/voice_ok_lin"
            android:background="@drawable/use_voice_backgrund"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/use_voice_one" />
            <com.guet.jason.sportsfriend.Xiu.MyFrontTextView
                android:layout_width="wrap_content"
                android:text="手指上划，取消发送"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/del_re"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/use_voice_backgrund"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/sc_img1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/use_voice_cancle"
            />
        <com.guet.jason.sportsfriend.Xiu.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="松开手指，取消发送"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/voice_rcd_hint_loading"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/use_voice_backgrund"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_rcd_hint_tooshort"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/use_voice_backgrund"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/voice_to_short" />

        <com.guet.jason.sportsfriend.Xiu.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:text="时间太短"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>